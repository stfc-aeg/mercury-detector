[
    {
        "fr_setup": {
            "fr_ready_cnxn":"tcp://127.0.0.1:5001",
            "fr_release_cnxn":"tcp://127.0.0.1:5002"
        },
    "meta_endpoint":"tcp://*:5008"
    },
    {
        "plugin": {
            "load": {
                "index":"hdf",
                "name":"FileWriterPlugin",
                "library":"${ODIN_PREFIX}/lib/libHdf5Plugin.so"
            }
        }
    },
    {
        "plugin": {
            "load": {
                "index":"reorder",
                "name":"MercuryReorderPlugin",
                "library":"${INSTALL_PREFIX}/lib/libMercuryReorderPlugin.so"
            }
        }
    },
    {
        "plugin": {
            "load": {
                "index":"addition",
                "name":"MercuryAdditionPlugin",
                "library":"${INSTALL_PREFIX}/lib/libMercuryAdditionPlugin.so"
            }
        }
    },
    {
        "plugin": {
            "load": {
                "index":"histogram",
                "name":"MercuryHistogramPlugin",
                "library":"${INSTALL_PREFIX}/lib/libMercuryHistogramPlugin.so"
            }
        }
    },
    {
        "plugin": {
            "connect": {
                "index":"reorder",
                "connection":"frame_receiver"
            }
        }
    },
    {
        "plugin": {
            "connect": {
                "index":"addition",
                "connection":"reorder"
            }
        }
    },
    {
        "plugin": {
            "connect": {
                "index":"histogram",
                "connection":"addition"
            }
        }
    },
    {
        "plugin": {
            "connect": {
                "index":"hdf",
                "connection":"histogram"
            }
        }
    },
    {
        "reorder": {
            "raw_data": true
        }
    },
    {
        "histogram": {
            "max_frames_received": 10
        }
    },
    {
        "hdf": {
            "dataset": "processed_frames"
        }
    },

    {
        "hdf": {
            "dataset": "raw_frames"
        }
    },
    {
        "hdf": {
            "dataset": "summed_spectra"
        }
    },
    {
        "hdf": {
            "dataset": "pixel_spectra"
        }
    },
    {
        "hdf": {
            "dataset": "spectra_bins"
        }
    },

    {
        "hdf": {
            "dataset": {
                "processed_frames" : {
                    "cmd": "create",
                    "datatype": "float",
                    "dims": [80, 80],
                    "chunks": [1, 80, 80],
                    "compression": "none"
                },
                "raw_frames" : {
                    "cmd": "create",
                    "datatype": "float",
                    "dims": [80, 80],
                    "chunks": [1, 80, 80],
                    "compression": "none"
                },
                "spectra_bins" : {
                    "cmd": "create",
                    "datatype": "float",
                    "dims": [800],
                    "chunks": [1, 800],
                    "compression": "none"
                },
                "pixel_spectra" : {
                    "cmd": "create",
                    "datatype": "float",
                    "dims": [6400, 800],
                    "chunks": [1, 6400, 800],
                    "compression": "none"
                },
                "summed_spectra" : {
                    "cmd": "create",
                    "datatype": "uint64",
                    "dims": [800],
                    "chunks": [1, 800],
                    "compression": "none"
                }
            },
            "file": {
                "path":""
            },
            "frames": 10,
            "acquisition_id":"test_1",
            "write": true
        }
    }
]
